#!/usr/bin/env bash

BASE=${KAS_BASE_PATH}/api/kafkas_mgmt/v1
KAFKA_BASE=${BASE}/kafkas

curl -L --insecure --oauth2-bearer "$(ocm token)" -S -s -D /dev/stderr "${KAFKA_BASE}"?async=true -d '{
    "region": "us-east-1",
    "cloud_provider": "aws",
    "name": "'"${1}"'",
    "multi_az":true
}' | jq