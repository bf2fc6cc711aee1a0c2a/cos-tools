#!/usr/bin/env bash

BASE=${COS_BASE_PATH}/api/connector_mgmt/v1
CONNECTORS_BASE=${BASE}/kafka_connector_types

curl -L --insecure --oauth2-bearer "$(ocm token)" -S -s "${CONNECTORS_BASE}" \
    | jq -r '
            ([
                "ID",
                "NAME",
                "VERSION",
                "LABELS",
                "CHANNELS"] 
            | (., map(length*"-"))), 
            (.items[]? | [
                .id, 
                .name, 
                .version, 
                (.labels | join(",")), 
                (.channels | join(","))
            ]) 
            | @tsv
        ' \
    | column -t -s $'\t' 